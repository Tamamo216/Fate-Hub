<div class="container m-0">
  <div class="register-wraper">
    <div class="row mt-3">
      <div class="col-5">
        <img src="/img/signup_tamamo.jpg" class="img-fluid rounded-start" alt="signup-background-img">
      </div>
      <div class="col-7">
        <form class="register-form px-3 rounded-2"
          action="/register", method="POST" novalidate>
          <h3 class="login-register-title">Sign up</h3>
          <div class="row mb-3">
            <label for="username-field" class="col-3 col-form-label">Username</label>
            <div class="col-8">
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fa-solid fa-user"></i>
                </span>
                <input type="text" class="form-control rounded-end" id="username-field" name="username" required>
                <div class="invalid-feedback">
                  Username must not be empty
                </div>
              </div>
            </div>
          </div>
          <div class="row mb-3">
            <label for="password-field" class="col-3 col-form-label">Password</label>
            <div class="col-8">
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fa-solid fa-key"></i>
                </span>
                <input type="password" class="form-control rounded-end" id="password-field" name="password" minlength="8" required>
                <div class="invalid-feedback">
                  Password must has at least 8 characters
                </div>
              </div>
            </div>
          </div>
          <div class="row mb-3">
            <label for="email-field" class="col-3 col-form-label">Email</label>
            <div class="col-8">
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fa-solid fa-envelope"></i>
                </span>
                <input type="email" class="form-control rounded-end" id="email-field" name="email" required>
                <div class="invalid-feedback">
                  Email must not be empty or invalid
                </div>
              </div>
            </div>
          </div>
          <div class="row mb-3">
            <label for="profilename-field" class="col-3 col-form-label">Profile name</label>
            <div class="col-8">
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fa-regular fa-address-card"></i>
                </span>    
                <input type="text" class="form-control rounded-end" id="profilename-field" name="displayName" required>
                <div class="invalid-feedback">
                  Profile name must not be empty
                </div>
              </div>
            </div>
          </div>
          <div class="row mb-3">
            <label for="gender-select" class="col-3 col-form-label">Gender</label>
            <div class="col-4">
              <select class="form-select" name="gender">
                <option value="">Choose</option>
                <option value="male">Male</option>
                <option value="female">Female</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>
          <div class="row mb-3">
            <label for="nation-field" class="col-3 col-form-label">Nationality</label>
            <div class="col-8">
              <div class="input-group">
                <span class="input-group-text">
                  <i class="fa-solid fa-globe"></i>
                </span>
                <input type="text" class="form-control" id="nation-field" name="nationality">
              </div>
            </div>
          </div>
          <div class="row mb-3">
            <div class="col d-flex flex-column align-items-center">
              <button type="submit" id="register-btn" class="btn btn-outline-danger rounded-4 px-5 mb-1">
                Sign up
              </button>
              <a href="/login" style="text-decoration: none; padding-top: 1.5%;">
                <i class="fa-solid fa-arrow-right-to-bracket fa-rotate-180"></i>
                Back to sign in
              </a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- Error modal -->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h2 class="modal-title" id="errorModalTitle">Error</h2>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <span id="errorMessage"></span>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script src="/js/register.js"></script>
<div class="container mt-3">
  <div class="row">
    <div class="col-9" style="max-height: 500px; overflow: auto;">
      {{#servantsByClass servantsByClass}}
      <div class="row row-cols-6 d-none" id="{{class}}-list">
        {{#each servants}}
        <div class="col text-center">
          <a href="{{details_url}}">
            <img src="{{avatar}}" class="servant-avatar" alt="servant-avt">
          </a>
          <a class="servant-name" href="{{details_url}}">
            {{name}}
          </a>
        </div>
        {{/each}}
      </div>
      {{/servantsByClass}}
    </div>
    <div class="col-3">
      <div class=" row row-cols-4 border rounded-2 p-2" id="servants-class-list">
        {{#generateClassTab servantsByClass}}
        <div class="col text-center rounded-2" data-target="{{class}}-list">
          <img src="{{avatarURL}}" alt="class-avt">
          <span>{{class}}</span>
        </div>
        {{/generateClassTab}}
      </div>
      <div class="d-flex flex-column mt-3 align-items-center">
        <input type="text" class="form-control" id="servant-search-field" placeholder="Enter a servant's name...">
        <button type="button" class="mt-3 btn btn-primary rounded-3" id="servant-search-btn">Search</button>
      </div>
    </div>
  </div>
  <script src="/js/servant_list.js"></script>
